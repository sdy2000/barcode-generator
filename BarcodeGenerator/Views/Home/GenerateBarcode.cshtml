@{
    ViewData["Title"] = "Generate Barcode";
}

<section class="user-info py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center mb-4">Enter User Information</h2>

                @using (Html.BeginForm("GenerateBarcode", "Home"))
                {
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" maxlength="12" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Generate QR Code</button>
                    </div>
                }
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center mb-4">Generated QR Code</h2>
                <div id="qrcode" class="text-center">
                    <img src="@ViewBag.ImagePath" alt="Barcode" />
                </div>
            </div>
        </div>
    </div>
</section>