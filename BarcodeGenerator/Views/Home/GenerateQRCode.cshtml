@{
    ViewData["Title"] = "Generate QR Code";
}

<section class="user-info py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center mb-4">Enter User Information</h2>

                @using (Html.BeginForm("GenerateQRCode", "Home"))
                {
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Generate QR Code</button>
                    </div>
                }
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center mb-4">Generated QR Code</h2>
                <div id="qrcode" class="text-center align-content-center">
                    <img src="@ViewBag.ImagePath" alt="Barcode" />
                </div>
            </div>
        </div>
    </div>
</section>